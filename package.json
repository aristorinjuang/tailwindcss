  "bugs": {
    "url": "https://github.com/aristorinjuang/tailwindcss/issues"
  },
  "homepage": "https://github.com/aristorinjuang/tailwindcss#readme",
  "devDependencies": {
    "autoprefixer": "^10.3.6",
    "postcss": "^8.3.8",
    "tailwindcss": "^2.2.16"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.3"
  }
}
